<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.mygithubuser">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.dicoding.mygithubuser.READ_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGithubUser"
        android:usesCleartextTraffic="true">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.FavoriteProvider"
            android:authorities="com.dicoding.mygithubuser"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.dicoding.mygithubuser.READ_DATABASE" />

        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".ReminderActivity" />
        <activity android:name=".FavoriteActivity" />
        <activity android:name=".DetailUserActivity" />
        <activity android:name=".MainActivity" />

    </application>

</manifest>